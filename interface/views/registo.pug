extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-margin-top
                h3 Registo 
                .w3-container
                    form.w3-container(action='/registo' method="POST")
                        label
                            b Nome
                        input.w3-input.w3-border(type="text", name="nome")
                        label
                            b Email
                        input.w3-input.w3-border(type="text", name="email")
                        label
                            b Filiação
                        input.w3-input.w3-border(type="text", name="filiacao")
                        label
                            
                            b Nível
                        select.w3-select.w3-border(name="nivel")
                            option(value="0") Consumidor
                            option(value="1") Produtor
                        

                        label
                            b Password
                        input.w3-input.w3-border(type="password", name="password")                        

                        input.w3-btn.w3-border.w3-margin(type="submit", value="Inserir")
                        input.w3-btn.w3-border.w3-margin(type="reset", value="Limpar valores")

            footer.w3-container
                address.w3-right
                    a(href="/") 
                        button.w3-button.w3-margin Voltar à página inicial