extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-margin-top
                h2 Inserir Novo Recurso
                .w3-container
                    form.w3-container(action='/recurso' enctype="multipart/form-data" method="POST")
                        label
                            b Tipo
                        select.w3-select.w3-border(name="tipo" multiple="multiple" required)
                            each t in tipos
                                option(value=t.tipo) #{t.tipo}
        
                        label
                            b Título
                        input.w3-input.w3-border(type="text", name="titulo" required)

                        label
                            b Subtítulo
                        input.w3-input.w3-border(type="text", name="subtitulo")

                        label
                            b Visibilidade
                        select.w3-select.w3-border(name="visibilidade" required)
                            option(value="true") Público
                            option(value="false") Privado                        

                        label
                            b Data de Criação
                        input.w3-input.w3-border(type="text", name="dataCriacao")

                        label
                            b Ficheiro a anexar:
                        input.w3-input.w3-border(type="file" name="myfile" required)                  

                        input.w3-btn.w3-border.w3-margin(type="submit", value="Inserir")
                        input.w3-btn.w3-border.w3-margin(type="reset", value="Limpar valores")

            footer.w3-container
                address.w3-right
                    a(href="/recurso") 
                        button.w3-button.w3-margin Voltar